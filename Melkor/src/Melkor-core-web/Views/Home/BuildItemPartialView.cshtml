@model Melkor_core_builder.BuildItem
<div class="btn-default panel panel-body col-md-12">
    
    <div class="col-xs-1 text-left">

        @if (Model.Status)
        {
            <span class="fa fa-check"></span>
        }
        else
        {
            <span class="fa fa-exclamation"></span>
        }
    </div>

    <div class="col-xs-11">
        @Model.Name
    </div>

    
</div>