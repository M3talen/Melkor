@model Melkor_core_builder.BuildItem
<div class="btn-default panel-body col-md-4">

    <p>@Model.Dir</p>
    <p>Build status :</p>
    @if (Model.Status)
    {
        <span class="panel-footer fa fa-check"></span>
    }
    else
    {
        <span class="panel-footer fa fa-exclamation "></span>
    }<br />
</div>